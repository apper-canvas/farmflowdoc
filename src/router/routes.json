{
  "/": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Dashboard is accessible to authenticated users",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/farms": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Farms page requires authentication",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/crops": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Crops page requires authentication",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/tasks": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Tasks page requires authentication",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/finances": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Finances page requires authentication",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
